@{
  Layout="Shared/_Layout.cshtml";
}


<h1>Add Genre</h1>
<hr />
<br>
<h2>Genre:</h2>
@if (Model.Count != 0)
{
  {
    <ul>
      @foreach (var genre in Model)
      {
        <li><a href='/genre/@genre.GetId()'>@genre.GetName()</a></li>
      }
    </ul>
  }
}
else
{
  <p>AINT NOTHIN</p>
}
<br>
<form action="/genre/new" method="post">
  <label for="genre-name">Genre name:</label>
  <input id="genre-name" name="genre-name" type="text">
  <button type="submit">Add a new Genre</button>
</form>
<br>
<p><a href="/">Return to Main Page</a></p>
