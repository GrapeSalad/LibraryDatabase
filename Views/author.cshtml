<h1>Add Author</h1>
<hr />

<h2>Author:</h2>
@if (Model.Count != 0)
{
  <ul>
    @foreach (var author in Model)
    {
      <li><a href='/authors/@author.GetId()'>@author.GetName()</a></li>
    }
  </ul>
}
else
{
  <p>AINT NOTHIN</p>
}

<form action="/author/new" method="post">
  <label for="author-name">Author name:</label>
  <input id="author-name" name="author-name" type="text">
  <button type="submit">Add a new Author</button>
</form>

<p><a href="/">Return to Main Page</a></p>
